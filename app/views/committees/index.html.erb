<p id="notice"><%= notice %></p>

<h1>Committees</h1>

<table>
  <thead>
    <tr>
      <th>Administration</th>
      <th>Name</th>
      <th>Num of faculty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.administration_id %></td>
        <td><%= committee.name %></td>
        <td><%= committee.num_of_faculty %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

